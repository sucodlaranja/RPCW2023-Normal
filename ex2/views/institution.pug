extends layout

block content

    .w3-bar.w3-black
        a(href="/").w3-button.w3-bar-item Home 
    header.w3-container.w3-orange.w3-text-white.w3-center.w3-margin-top 
        h1 Welcome to #{slist[0].NomeInstituicao} Institution Page!
        h2 NIPC - #{slist[0].NIPCInstituicao}

    header.w3-container.w3-orange.w3-margin-top.w3-text-white
        h1 Contract List
    .w3-container 
        table.w3-table
            tr 
                th id
                th Start Date
                th End Date 
                th Institution Name 
                th Institution Areas
            each s in slist
                tr
                    td 
                        a(href = "/" + s._id) #{s._id}
                    td= s.DataInicioContrato
                    td= s.DataFimContrato
                    td
                        a(href = s.NIPCInstituicao) #{s.NomeInstituicao}
                    td= s.AreasInvestigacao


    footer.w3-container.w3-orange 
